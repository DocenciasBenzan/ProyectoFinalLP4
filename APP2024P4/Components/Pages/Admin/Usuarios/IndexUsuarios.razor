@rendermode InteractiveServer
@attribute [StreamRendering]
@page "/usuarios"
@* @using Microsoft.AspNetCore.Authorization
@attribute [Authorize] *@

@if (ShowForm)
{
    @* Formularion de accion*@
    <div class="card">
        <h5 class="card-header">@Accion Usuario</h5>
        <div class="card-body">
            <form class="row g-3">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" placeholder="Nombre">
                </div>
                <div class="col-md-6">
                    <label for="contraseña" class="form-label">Contraseña</label>
                    <input type="text" class="form-control" id="contaseña" placeholder="Contraseña">
                </div>
                <div class="col-md-6">
                    <label for="cargo" class="form-label">Cargo</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Selecciona el cargo</option>
                        <option value="1">Adiministrador</option>
                        <option value="2">Gerente</option>
                        <option value="3">Empleado</option>
                    </select>
                </div>
            </form>
            <div class="mt-3">
                <span class="btn btn-primary me-2">Aceptar</span>
                <span class="btn btn-danger" @onclick="btnCancelarClick">Cancelar</span>
            </div>
        </div>
    </div>
}
else
{
    @* Formularion de los registros*@
    <a href="/admin" class="btn btn-outline-primary " type="button"> ⬅️Volver</a>
    <div class="card mb-3 mt-3">
        <div class="card-header">
            <span class="btn btn-success" @onclick="btnAgregarClick">
                <i class="bi bi-plus-circle"></i> Agregar Usuario
            </span>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Contraseña</th>
                        <th scope="col">Cargo</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Wilmer Geraldo Reyes</td>
                        <td>********</td>
                        <td>Administrador</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <span @onclick="btnEditarClick" class="btn btn-secondary rounded me-2">
                                    <i class="bi bi-pencil"></i> Editar
                                </span>
                                <span @onclick="btnEliminarClick" class="btn btn-danger rounded">
                                    <i class="bi bi-trash"></i> Eliminar
                                </span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
@code {
    string Accion = "Registrar";
    bool ShowForm = false, DisableInputs = false;

    public void btnAgregarClick()
    {
        Accion = "Registrar";
        ShowForm = true;
        StateHasChanged();
        DisableInputs = false;
    }
    public void btnEditarClick()
    {
        Accion = "Editar";
        ShowForm = true;
        DisableInputs = false;
    }
    public void btnEliminarClick()
    {
        Accion = "Eliminar";
        ShowForm = true;
        DisableInputs = true;
    }
    public void btnCancelarClick()
    {
        ShowForm = false;
    }
}