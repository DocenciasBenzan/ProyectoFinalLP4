@*
    @using Microsoft.AspNetCore.Authorization
    @attribute [Authorize]
    @attribute [StreamRendering]
*@

@rendermode InteractiveServer
@page "/agregar"

<h3> Add a Component </h3>
@if (ShowForm)
{
    @*Formulario para ejecutar una accion*@
    <div class="card">
        <h5 class="card-header"> @Accion producto </h5>
        <div class="card-body">
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="email" class="form-control" id="nombre" placeholder="Nombre" disabled="@DisableInputs">
            </div>

            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripcion</label>
                <textarea class="form-control" id="descripcion" rows="3" disabled="@DisableInputs"></textarea>
            </div>

            <span class="btn btn-primary">Aceptar</span>
            <span class="btn btn-danger" @onclick="btnCancelarClick">Cancelar</span>
        </div>
    </div>
}

else
{
    @* Formulario de los registros *@
    <div class="card mb-3 mt-3">
        <div class="card-header">
            <span class="btn btn-success" @onclick="btnAgregarClick">+</span>
        </div>

        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>M</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <span @onclick="btnEditarClick" class="btn btn-outline-warning">Editar</span>
                                <span @onclick="btnEliminarClick" class="btn btn-outline-danger">Eliminar</span>
                                <span @onclick="btnVerClick" class="btn btn-outline-primary" >Ver</span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}


@code {
    string Accion = "Registrar";
    bool ShowForm = false, DisableInputs = false;

    public void btnAgregarClick()
    {
        @*Metodo para el boton Agregar*@
        Accion = "Registrar";
        ShowForm = true;
        StateHasChanged();
        DisableInputs = false;
    }
    public void btnEditarClick()
    {
        @*Metodo para el boton Editar*@
        Accion = "Editar";
        ShowForm = true;
        DisableInputs = false;
    }
    public void btnEliminarClick()
    {
        @*Metodo para el boton Eliminar*@
        Accion = "Eliminar";
        ShowForm = true;
        DisableInputs = true;
    }
    public void btnVerClick()
    {
        @*Metodo para el boton Ver*@
        Accion = "Ver";
        ShowForm = true;
        DisableInputs = true;
    }
    public void btnCancelarClick()
    {
        @*Metodo para el boton Cancelar*@
        ShowForm = false;
    }
}
