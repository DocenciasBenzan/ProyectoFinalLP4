@rendermode InteractiveServer
@attribute [StreamRendering]
@attribute [Authorize]
@page "/notificaciones"


<div class="notification-container">
    <div class="notification-header">
        <h4>Notificaciones</h4>
    </div>
    <div class="notification-body">
        @if (Notifications!.Count > 0)
        {
            @foreach (var p in Notifications)
            {
                <div class="notification-item">
                    <div class="notification-content">
                        <strong>Invitación a colaborar</strong>
                        <p>Para: <span class="email-highlight">@p.RenderEmail</span></p>
                        <p class="small-text">Enviado por: @p.SenderEmail</p>
                    </div>
                    <div class="notification-actions">
                        <span class="btn btn-success btn-sm" @onclick="() => btnAgregarClick(p.Id, p.TareaId)">Aceptar</span>
                        <span class="btn btn-danger btn-sm" @onclick="() => btnEliminarClick(p.Id)">Rechazar</span>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-notifications">
                <p>No hay notificaciones nuevas.</p>
            </div>
        }
    </div>
</div>

@code {

    private List<NotificacionDto>? Notifications;
    private string CurrentUserEmail = null!;
    private ClaimsPrincipal? currentUser;
    public bool Isread;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        currentUser = authState.User;


        if (user.Identity!.IsAuthenticated)
        {
            CurrentUserEmail = user.FindFirst(c => c.Type == ClaimTypes.Email)?.Value!;
        }
        await ConsultarNotificaciones();
    }

    public async Task btnAgregarClick(int notificationId, int tareaId)
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            currentUser = authState.User;
            var userId = currentUser?.FindFirst(ClaimTypes.NameIdentifier)?.Value; // Obtén el ID del usuario actual
            if (string.IsNullOrEmpty(userId)) return;

            var result = await NotificationService.RespondToInvitationAsync(notificationId, true, userId, tareaId);
            if (result.Succesd)
            {
                Isread = true;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"☠️ Error: {ex.Message}");
        }
    }

    public async Task btnEliminarClick(int notificationId)
    {
        await NotificationService.Delete(notificationId);
        await ConsultarNotificaciones();
    }

    private async Task ConsultarNotificaciones()
    {
        var result = await NotificationService.GetNotificacionByEmail(CurrentUserEmail,Isread);
        Notifications = result.Data?.ToList() ?? new List<NotificacionDto>();
    }
}
